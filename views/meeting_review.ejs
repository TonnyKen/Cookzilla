<%- include('./header') %>
<link href="css/comment.css" rel="stylesheet">

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
              <h2>Review your meeting Here</h2>
                <form class="form-horizontal">
                    <fieldset>
                        <legend class="text-center header">Share your feeling with others</legend>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                            <div class="col-md-8">
                                <textarea class="form-control" id="description" name="description" placeholder="Descript your meeting" rows="7"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                            <div class="col-md-8">
                              <section>
                                <input type='file' onchange="readURL(this);" name="image_name"/><br/>
                                <span id="previewPane">
                                <img id="img_prev" src="#" alt="" name="image_src" style="display: none;" />
                                <span id="x"></span>
                                </span>
                              </section>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="button" id="reviewmsubmit" class="btn btn-primary btn-lg">Submit</button>
                            </div>
                        </div>

                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="js/reviewmeeting.js"></script>
<script src="js/jquery.js"></script>
<script src="js/main.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="js/bootstrap.min.js"></script>

