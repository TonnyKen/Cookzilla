<%- include('./header') %>
    <!-- Page Content -->
<div class="container">
    <!-- Heading Row -->
    <div class="row">
        <div class="col-md-8">
            <img class="img-responsive img-rounded" src="http://placehold.it/900x350" alt="">
        </div>
        <!-- /.col-md-8 -->
        <div class="col-md-4">
            <h1><%= reports.mname %></h1>
            <p>Hold by Group: <%= gname %></p>
            <p>Start time: <%= reports.mtime %></p>
            <p>Last: <%= reports.lasttime %> hours</p>
            <p>location: <%= reports.mlocation %></p>
            <%if (canrg) { %> <a class="btn btn-primary btn-lg" href="registerm?mid=<%= reports.mid %>">RSVP NOW</a> <% } %>
            <%if (cancancel) { %> <a class="btn btn-primary btn-lg" href="cancelm?mid=<%= reports.mid %>">Cancel meeting</a> <% } %>
            <%if (seereport) { %> <a class="btn btn-primary btn-lg" href="">See reports</a> <% } %>
        </div>
        <!-- /.col-md-4 -->
    </div>
    <!-- /.row -->

    <hr>

    <!-- Call to Action Well -->
    <div class="row">
        <div class="col-lg-12">
            <div class="well text-center">
                Meeting Pictures
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row">
            <% for(var i=0; i < reports.length; i++) { %>
              <div class="col-sm-4 col-lg-4 col-md-4">
                  <div class="thumbnail recipe">
                      <img src=<%= reports[i].PHOTOS %> alt="">
                      <div class="caption">
                          <!-- <h4 class="pull-right">$24.99</h4> -->
                          <h4><%= reports[i].user_name %>
                          </h4>
                          <p>comment</p>
                      </div>
                  </div>
              </div>
            <% } %>
        </div>
</div>
<script src="js/upload.js"></script>
<script src="js/jquery.js"></script>
<script src="js/main.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="js/bootstrap.min.js"></script>
<%- include('./footer') %>
