<%- include('./header') %>
<link href="css/comment.css" rel="stylesheet">
<script src="js/bootstrap-rating-input.min.js" type="text/javascript"></script>
<script src="js/comment.js" type="text/javascript"></script>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
              <h2>Comment Here</h2>
                <form class="form-horizontal">
                    <fieldset>
                        <legend class="text-center header">Comments and Responses</legend>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-reorder bigicon"></i></span>
                            <div class="col-md-8">
                                <input class = "input comment_input" type = "text" placeholder = "Type your title (required)" name = "title"  id = "title" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-paw bigicon"></i></span>
                            <div class="col-md-8">
                                <input class = "input comment_input" type = "text" placeholder = "Type your review (required)" name = "demail"  id = "review" required>
                            </div>
                        </div>
                        <!-- stars -->
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-star bigicon"></i></span>
                            <div class="col-md-8">
                               <input type="number" name="your_awesome_parameter" id="some_id" class="rating form-row" />
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                            <div class="col-md-8">
                                <textarea class="form-control" id="comment_suggestion" name="comment" placeholder="Enter your suggestion" rows="7"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="button" id="commentSubmit" class="btn btn-primary btn-lg">Submit</button>
                            </div>
                        </div>


                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="js/jquery.js"></script>
<script src="js/main.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="js/bootstrap.min.js"></script>

<%- include('./footer') %>
